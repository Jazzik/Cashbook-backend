# Telegram Bot Configuration
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ID чата для отправки сообщений
# Для получения ID чата отправьте сообщение боту @userinfobot
TELEGRAM_CHAT_ID=your_chat_id_here

# ID thread для отправки сообщений (опционально)
# Если не задан, сообщения отправляются в основной чат
# Для получения thread ID используйте функцию startMessageListener в bot.js
TELEGRAM_THREAD_ID=your_thread_id_here
